:{$PORT:80} {
	header {
		X-Frame-Options "DENY"
		X-Content-Type-Options "nosniff"
		X-XSS-Protection "1; mode=block"
		Referrer-Policy "strict-origin-when-cross-origin"
		Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
		Permissions-Policy "accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(self), payment=(self), usb=(), interest-cohort=()"
		Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://js.stripe.com https://www.googletagmanager.com https://www.google-analytics.com https://*.clerk.accounts.dev https://challenges.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: blob: https://img.clerk.com https://*.stripe.com https://www.google-analytics.com; connect-src 'self' https://*.clerk.accounts.dev https://api.clerk.com https://clerk.certvoice.co.uk https://*.sentry.io https://www.google-analytics.com https://region1.google-analytics.com https://js.stripe.com https://api.stripe.com https://*.workers.dev wss://*.clerk.accounts.dev; frame-src https://js.stripe.com https://hooks.stripe.com https://challenges.cloudflare.com https://*.clerk.accounts.dev; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://checkout.stripe.com https://*.clerk.accounts.dev; object-src 'none'; worker-src 'self' blob:; manifest-src 'self'"
		X-Permitted-Cross-Domain-Policies "none"
		-Server
	}

	encode gzip zstd

	@immutable path /assets/*
	header @immutable Cache-Control "public, max-age=31536000, immutable"

	@static path /icons/* /screenshots/* /images/* *.png *.jpg *.jpeg *.webp *.svg *.ico
	header @static Cache-Control "public, max-age=86400"

	@sw path /sw.js
	header @sw Cache-Control "no-cache, no-store, must-revalidate"

	@manifest path /manifest.json
	header @manifest Cache-Control "public, max-age=3600"

	root * /srv
	try_files {path} /index.html
	file_server
}
